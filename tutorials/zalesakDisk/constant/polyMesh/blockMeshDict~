FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

vertices
(
	(-1 -1 -0.005)	//0
	(-1 1 -0.005)	//1
	(1 1 -0.005)	//2
	(1 -1 -0.005)	//3

	(-1 -1 0.005)	//4
	(-1 1 0.005)	//5
	(1 1 0.005)	//6
	(1 -1 0.005)	//7

);

blocks
(
    hex (0 3 2 1 4 7 6 5) (128 128 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
		(0 1 5 4)
		(0 3 7 4)
        );
    }

    outlet
    {
        type patch;
        faces
        (
		(1 2 6 5)
		(3 2 6 7)		
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
		(0 1 2 3)
		(7 6 5 4)
        );
    }
);

mergePatchPairs
(
);

